{
  "compilerOptions": {
    // üöÄ CONFIGURA√á√ÉO ULTRA-R√ÅPIDA PARA DESENVOLVIMENTO
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "ES6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo-ultra",
    
    // üéØ PATH ALIASES OTIMIZADOS
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/app/*": ["./src/app/*"]
    },
    
    // üî• M√ÅXIMA PERFORMANCE
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false,
    "noUncheckedIndexedAccess": false,
    "noImplicitOverride": false,
    "checkJs": false,
    "allowUnreachableCode": true,
    "allowUnusedLabels": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "build",
    "**/*.test.*",
    "**/*.spec.*",
    "**/tests/**",
    "**/test/**",
    "scripts/**",
    "**/*.backup.*",
    "**/api_backup_*/**",
    "**/*.old.*",
    "**/*.js"
  ]
}